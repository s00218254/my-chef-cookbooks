[DEFAULT]

# LOGS/STATE
verbose=true
debug=<%= @debug %>
<% if node["nova"]["ratelimit"]["api"]["enabled"] %>
auth_strategy=keystone
<% else %>
auth_strategy=keystone_nolimit
<% end %>

logdir=/var/log/nova
#log_config=/etc/nova/logging.conf
state_path=/var/lib/nova
lock_path=/var/lock/nova

##### RABBITMQ #####
